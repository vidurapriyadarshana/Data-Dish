<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.CheckoutController">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Orders" />
                <TextField fx:id="searchBar" promptText="Search orders..." style="-fx-font-size: 16px; -fx-background-color: #f0f0f0; -fx-padding: 5;" />
                <Button fx:id="btnSearch" onAction="#handleSearch" style="-fx-font-size: 14px;" text="Search" />
            </HBox>

            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="550">
                <content>
                    <GridPane fx:id="ordersGrid" hgap="15" style="-fx-padding: 10;" vgap="10">

                    </GridPane>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
