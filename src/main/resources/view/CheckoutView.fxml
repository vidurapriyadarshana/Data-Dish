<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.CheckoutController">
    <children>
        <VBox spacing="30.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <!-- Header with Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Orders" />
                <TextField fx:id="searchBar" promptText="Search orders..." style="-fx-font-size: 16px; -fx-background-color: #f0f0f0; -fx-padding: 5;" />
                <Button fx:id="btnSearch" onAction="#handleSearch" style="-fx-font-size: 14px;" text="Search" />
            </HBox>
         <TableView fx:id="cheackoutTable" prefHeight="371.0" prefWidth="780.0">
           <columns>
             <TableColumn fx:id="colOrderId" prefWidth="150.0" text="Order ID" />
             <TableColumn fx:id="colTableId" prefWidth="150.0" text="Table Id" />
               <TableColumn fx:id="colEmployeeId" prefWidth="150.0" text="Employee Id" />
               <TableColumn fx:id="colTotalAmount" prefWidth="150.0" text="Total Amount" />
               <TableColumn fx:id="colAction" prefWidth="174.0" text="Actions" />
           </columns>
         </TableView>
        </VBox>
    </children>
</AnchorPane>
