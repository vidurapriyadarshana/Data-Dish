<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="789" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.CheckoutController">
    <children>
        <!-- Main Container -->
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <!-- Header with Title and Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Orders" />

                <!-- Search Bar -->
                <TextField fx:id="searchBar" promptText="Search orders..." style="-fx-font-size: 16px; -fx-background-color: #f0f0f0; -fx-padding: 5;" />
                <Button fx:id="btnSearch" onAction="#handleSearch" style="-fx-font-size: 14px;" text="Search" />
            </HBox>

            <!-- Orders GridPane -->
            <GridPane fx:id="ordersGrid" hgap="15" style="-fx-padding: 15;" vgap="15">
                <!-- Dynamically populated rows of orders -->
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
