<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="236.0" prefWidth="150.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.FoodController">
   <children>
      <ImageView fx:id="imageLoad" fitHeight="100.0" fitWidth="100.0" layoutX="25.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
      <VBox layoutX="12.0" layoutY="130.0" prefHeight="95.0" prefWidth="125.0" spacing="2.0">
         <children>
            <Label fx:id="foodNameLabel" text="Name">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <HBox prefHeight="20.0" prefWidth="125.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="priceLabel" text="Price" />
               </children>
            </HBox>
            <Label fx:id="foodCount" layoutX="10.0" layoutY="27.0" text="Label" />
            <Button fx:id="btAddToCart" mnemonicParsing="false" onAction="#addToCartAction" prefHeight="25.0" prefWidth="141.0" text="Add To Cart" />
         </children>
      </VBox>
   </children>
</AnchorPane>
